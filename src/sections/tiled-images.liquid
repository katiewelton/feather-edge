<section class="-section section-id-{{ section.id }}" data-section-type="tiled-images">
  <div class="container-tiles">
    <div class="tile-group">
      {% assign i = 0 %}
      {% for block in section.blocks %}
      {% if i == 0 %}
        <div class="tile-column tile-column--first">
      {% endif %}
      {% if i == 0 or i == 1 %}
        {% include 'tile-image' %}
      {% endif %}
      {% if i == 1 %}
        </div>
      {% endif %}
      {% if i == 2 %}
        <div class="tile-column tile-column--second">
      {% endif %} 
      {% if i == 2 or i == 3 %}
        {% include 'tile-image' %}
      {% endif %}
      {% if i == 3 %}
        </div>
      {% endif %} 
      {% if i == 4 %}
        <div class="tile-column tile-column--third">
      {% endif %} 
      {% if i == 4 or i == 5 %}
        {% include 'tile-image' %}
      {% endif %}
      {% if i == 5 %}
        </div>
      {% endif %}  



      {% assign i = i | plus: 1 %}
      {% endfor %}
    </div>
  </div>
</section>

<style type="text/css">
  {% for block in section.blocks %}
  {% if block.settings.title != blank %}
  .section-id-{{ section.id }} .block-id-{{ block.id }} .overlay .inner {
    color: {{ block.settings.overlay_color }};
    background: {{ block.settings.overlay_bg | hex_to_rgba: 0.85 }};
  }
  {% endif %}
  {% endfor %}
</style>


