        "id": "text",
        "label": "Text",
	     	"default": "<p>Use this text to share information about your store with your customers.</p><p>Describe product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button link"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "title_text_color",
        "label": "Title color",
        "default": "#464654"
      },
	  {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
	     	"default": "#464654"
      },
	  {
        "type": "color",
        "id": "text_background",
        "label": "Background color",
	     	"default": "#ffffff"
      },
	  {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
	     	"default": "#464654"
      }
	],
	"presets": [
	  {
		"name": "Image with text",
        "category": "Image",
        "settings": {}
	  }
	]
  }
{% endschema %}
