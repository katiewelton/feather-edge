    "name": "Image with text",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
		    "default": "right",
        "options": [
          {
            "value": "right",
            "label": "Text on left"
          },
		  {
            "value": "left",
            "label": "Text on right"
          }
        ]
      },
      {
